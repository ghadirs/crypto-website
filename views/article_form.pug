extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='title') Title:
      input#title.form-control(type='text', placeholder='Name of article' name='title' required='true' value=(undefined===article ? '' : article.title) )
    div.form-group
      label(for='author') Author:
      input#author.form-control(type='text', placeholder='Name of author' name='author' required='true' value=(undefined===article ? '' : article.author) )
    div.form-group
      label(for='text') Summary:
      textarea#text.form-control(type='textarea', placeholder='Summary' name='text' required='true') #{undefined===article ? '' : article.text}
      
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg